<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1FFF3"
    tools:context=".TrannsportationCal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/backbutton" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"
            android:text="TRANSPORTATION" />

    </LinearLayout>


    <TextView
        android:id="@+id/textView5"
        android:layout_width="370dp"
        android:layout_height="270dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/transportationgraphbox"
        android:text="CO2 Emission by Transportation"
        android:paddingLeft="30dp"
        android:paddingTop="10dp"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/barchart_transportation"
        android:layout_width="320dp"
        android:layout_height="220dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="100dp"
        />

    <Spinner
        android:id="@+id/transportation_graph_spinner"
        android:layout_width="80dp"
        android:layout_height="20dp"
        android:background="@drawable/dropdownbox"
        android:layout_marginStart="270dp"
        android:layout_marginTop="70dp"
        />


    <FrameLayout
        android:layout_width="370dp"
        android:layout_height="270dp"
        android:background="@drawable/emittedbox2"
        android:layout_marginTop="350dp"
        android:layout_marginStart="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO2 emission is calculated as below:"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carbon Emission(kg/CO2e)"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="90dp"
            android:layout_marginTop="40dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distance(km) x Emission Factor(kg/CO2e)"
            android:fontFamily="sans-serif-black"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle type:"
            android:layout_marginStart="40dp"
            android:layout_marginTop="95dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mileage:"
            android:layout_marginStart="67dp"
            android:layout_marginTop="130dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CO2e calculated:"
            android:layout_marginStart="16dp"
            android:layout_marginTop="165dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date:"
            android:layout_marginStart="90dp"
            android:layout_marginTop="200dp"/>
        <Button
            android:id="@+id/date_picker_transportation"
            android:textColor="@color/black"
            android:layout_width="150dp"
            android:layout_height="35dp"
            android:padding="0dp"
            android:backgroundTint="#DFF7E2"
            android:layout_marginTop="193dp"
            android:layout_marginStart="130dp" />

        <Spinner
            android:id="@+id/transportation_options"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="90dp"
            android:background="@drawable/dropdownbox"
            />
        <EditText
            android:id="@+id/transportation_mileage"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="125dp"
            android:background="@drawable/dropdownbox"
            />
        <TextView
            android:id="@+id/transportation_output"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:background="@drawable/dropdownbox"
            android:layout_marginStart="130dp"
            android:layout_marginTop="160dp"
            />

        <Button
            android:id="@+id/add_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:text="Add"
            android:textColor="@color/white"
            android:backgroundTint="#0068FF"
            android:layout_marginTop="230dp"
            android:layout_marginStart="80dp"/>

        <Button
            android:id="@+id/cancel_button"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:padding="0dp"
            android:text="Cancel"
            android:textColor="@color/white"
            android:backgroundTint="#0068FF"
            android:layout_marginTop="230dp"
            android:layout_marginStart="180dp"/>



    </FrameLayout>


</FrameLayout>
